{
    "name":         "behat/sauce",
    "description":  "Scenario-oriented BDD framework for use with SauceLabs",
    "keywords":     ["BDD", "Behat", "SauceLabs", "Sauce"],
    "homepage":     "http://github.com/elblinkin/Behat-Sauce",
    "type":         "library",
    "license":      "MIT",
    "authors":      [
        {
            "name":      "LB Denker",
            "email":     "github@elblinkin.info",
            "homepage":  "http://elblinkin.info"
        }
    ],
    "require": {
        "php":                           ">=5.3.1",
        "behat/behat":                   ">=2.3.0",
        "behat/gherkin":                 ">=2.1.1,<2.2.0-dev",
        "behat/mink":                    ">=1.3.0",
        "alexandresalome/php-selenium":  "*"
    },
    "autoload": {
        "psr-0": {
            "Behat\\Sauce": "src/"
        }
    },
    "repositories": {
        "behat/mink-deps": {
            "type": "composer",
            "url":  "behat.org"
        }
    },
    "bin": ["bin/behat-sauce"]
}